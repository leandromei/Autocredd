{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd autocred-evolution-api-updated && npm install --force && npm cache clean --force && cd .."
  },
  "deploy": {
    "startCommand": "cd autocred-evolution-api-updated && node index.js",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
} 
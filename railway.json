{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install --force && npm cache clean --force"
  },
  "deploy": {
    "startCommand": "node index_evolution.js",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  }
} 
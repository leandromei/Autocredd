{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cp package_railway.json package.json && npm install express cors qrcode --save --force && npm cache clean --force"
  },
  "deploy": {
    "startCommand": "node simple_baileys.js",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "8000"
      }
    }
  }
} 
{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install express cors qrcode --save --force && npm cache clean --force && echo 'BUILD V2.0.0 COMPLETE'"
  },
  "deploy": {
    "startCommand": "node index.js",
    "restartPolicyType": "always",
    "restartPolicyMaxRetries": 5
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "8000"
      }
    }
  }
} 